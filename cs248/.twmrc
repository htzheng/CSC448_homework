#
# Variable Definitions
#

#TitleButtonBorderWidth 0	# don't want to see box around button
#ButtonIndent 0			# button doesn't have to be smaller

NoHighlight			# do not flash borders on enter events
OpaqueMove			# actually move window instead of outline
RestartPreviousState		# reiconify iconified things on startup
#ClientBorderWidth		# use the application border width on frame
NoGrabServer			# don't grab server during menus, etc.
NoTitleFocus			# avoid keystrokes in wrong window cause of lag
DontMoveOff

# for black on white video
Monochrome {
	DefaultForeground "black"
	DefaultBackground "white"
	BorderColor "black"
	MenuBackground "white"
	MenuForeground "black"
	TitleBackground "white"
	TitleForeground "black"
	IconManagerBackground "white"
	IconManagerForeground "black"
}

Color
{
    BorderColor "PowderBlue"
    BorderTileBackground "gray70"
    BorderTileForeground "gray20"
    DefaultBackground "gray10"
    DefaultForeground "gray95"
    TitleBackground "RoyalBlue"
    TitleForeground "ivory"
    MenuBackground "RoyalBlue"
    MenuForeground "ivory"
    MenuTitleBackground "gray70"
    MenuTitleForeground "gray10"
    MenuShadowColor "gray30"
    IconBackground "gray10"
    IconForeground "gray95"
    IconBorderColor "gray95"
    IconManagerBackground "RoyalBlue"
    IconManagerForeground "ivory"
}

TitleFont "-adobe-helvetica-medium-r-*-*-10-*-*-*-*-*-*-*"
MenuFont "-adobe-helvetica-medium-r-*-*-14-*-*-*-*-*-*-*"
IconFont "-adobe-helvetica-medium-r-*-*-10-*-*-*-*-*-*-*"
IconManagerFont "-adobe-helvetica-medium-r-*-*-10-*-*-*-*-*-*-*"
ResizeFont "-adobe-helvetica-medium-r-*-*-14-*-*-*-*-*-*-*"

XORvalue 60			# works for my gray scale monitor
ConstrainedMoveTime 0		# turn off horizontal/vertical only moving

ShowIconManager			# start with iconmgr up
IconManagerGeometry "120x88-0+154" 1
IconifyByUnmapping		# just use icon manager
IconManagerDontShow		# but ignore these windows
{
  "xclock"
  "xbiff"
  "xload"
  "oclock"
  "xcutsel"
  "xman"
  "xremind"
  "xstring"
  "perfmeter"
}

DontIconifyByUnmapping		# don't lose them (still in TwmWindows menu)
{
  "xclock"
  "xbiff"
  "xload"
  "oclock"
  "xcutsel"
  "Untitled"
  "xman"
  "xremind"
  "xstring"
  "xpostit"
  "perfmeter"
}

NoTitle				# little programs that look like icons
{
  "xclock"
  "xbiff"
  "xload"
  "TWM Icon Manager"
  "xcutsel"
  "xman"
  "xremind"
  "perfmeter"
}

LeftTitleButton "target" = f.menu "deletewinops"

#
# Define key bindings
#

MoveDelta 3			# need to move this much before takes effect
Function "move-or-raise"	# simulate uwm action
{
    f.move
    f.deltastop
    f.raise
}

DefaultFunction f.nop		# ignore extraneous events

Button1 =	: root				: f.menu "windowops"
Button2 =	: root				: f.menu "hosts"
Button3 =	: root				: f.menu "miscjobs"
Button1 =	: title				: f.function "move-or-raise"
Button1 =	: icon				: f.iconify
Button1 =	: iconmgr			: f.iconify
Button1	= m	: window|icon|frame|title	: f.raise
Button2	= m	: window			: f.resize
Button3	= m	: window|icon|frame|title	: f.function "move-or-raise"
Button1	= c|m|s	: root				: f.refresh

"F15"		=	: all			: f.raiselower
"F17"		=	: all			: f.iconify

#
# Menus
#

menu "windowops"
{
"Window Ops"		f.title
"Refresh"		f.refresh
"Delete"		f.delete
"Info"			f.identify
"Iconify"		f.iconify
"Resize"		f.resize
"Move"			f.move
"Raise"			f.raise
"Lower"			f.lower
"Save"			f.saveyourself
"Kill"			f.destroy
"Preferences"		f.menu "preferences"
"Twm Windows"		f.menu "TwmWindows"
""			f.nop
"Restart Twm"		f.restart
"Exit"			f.menu "quitops"
}

menu "preferences"
{
"Preferences"	f.title
"Mouse Fast"	!"xset m 9 2&"
"Mouse Normal"	!"xset m 4 2&"
"Mouse Slow"	!"xset m 1 1&"
"Bell Loud"	!"xset b 1 1 250&"
"Bell Normal"	!"xset b 1 1 40&"
"Bell Off"	!"xset b off&"
"Click On"	!"xset c 8&"
"Click Off"	!"xset c off&"
}

menu "miscjobs"
{
"Misc Jobs"		f.title
"AnswerBook"		!"answerbook &"
"Emacs"			!"emacs &"
"Netscape"		!"netscape -ncol 128 &"
"Xcalc"			!"xcalc &"
"Xclipboard"		!"xclipboard &"
"Xfontsel"		!"xfontsel &"
"Xman"			!"xman &"
}

menu "hosts"
{
"Hosts"			f.title
"Csh Local Window"	!"xterm &"
"Triumph"		!"xon triumph xterm -T triumph -n triumph &"
}

menu "quitops"
{
"Are You Sure?"         f.title
"yes"                   f.quit
"no"                    f.nop
}

menu "deletewinops"
{
"Kill Window?"		f.title
"yes"                   f.delete
"no"                    f.nop
}
